{
  "name": "@workspace/plantools",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "files": [
    "dist"
  ],
  "main": "./dist/es/index.js",
  "module": "./dist/es/index.js",
  "types": "./dist/es/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/es/index.d.ts",
        "default": "./dist/es/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.cts",
        "default": "./dist/cjs/index.cjs"
      }
    }
  },
  "scripts": {
    "build": "bunchee --sourcemap",
    "ci": "pnpm run build",
    "dev": "bunchee --sourcemap --watch",
    "clean": "rimraf dist node_modules",
    "lint": "eslint src/",
    "check-types": "tsc --noEmit",
    "test": "jest"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "bunchee": "^6.4.0",
    "eslint": "^9.25.0",
    "rimraf": "^6.0.1",
    "typescript": "5.8.2"
  }
}
