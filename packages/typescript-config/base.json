{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@tsconfig/node22/tsconfig.json",
  "display": "Base configuration",
  "compilerOptions": {
    "baseUrl": "${configDir}",
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["${configDir}/src"],
  "exclude": ["node_modules", "dist"]
}
