{
  "$schema": "./node_modules/turbo/schema.json",
  "globalPassThroughEnv": ["DEPLOY_ENV"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "env": ["MONGO_DB_CONNECTION_STRING", "MONGO_DB_NAME", "API_BASE_URL"]
    },
    "cf-deploy": {
      "dependsOn": ["@workspace/validators#build", "@workspace/plantools#build"],
      "cache": false
    },
    "clean": {
      "dependsOn": ["^clean"],
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "ci": {
      "dependsOn": ["^ci"]
    },
    "dev-setup": {
      "dependsOn": ["^dev-setup"]
    },
    "dev": {
      "dependsOn": ["^dev-setup"],
      "persistent": true,
      "cache": false
    }
  },
  "ui": "tui"
}
