{
  "$schema": "./node_modules/turbo/schema.json",
  "globalPassThroughEnv": ["DEPLOY_ENV", "NODE_ENV", "DISABLE_AUTH"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "env": ["MONGO_DB_CONNECTION_STRING", "MONGO_DB_NAME"]
    },
    "cf-deploy": {
      "cache": false,
      "dependsOn": [
        "@workspace/plantools#build"
      ]
    },
    "ci": {
      "dependsOn": ["^ci"]
    },
    "clean": {
      "cache": false,
      "dependsOn": ["^clean"]
    },
    "dev": {
      "cache": false,
      "dependsOn": ["^dev-setup"],
      "persistent": true
    },
    "dev-setup": {
      "dependsOn": ["^dev-setup"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    }
  },
  "ui": "tui"
}
