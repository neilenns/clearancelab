{
  "name": "api",
  "version": "1.0.0",
  "type": "module",
  "packageManager": "npm@10.9.2",
  "scripts": {
    "dev": "tsx --inspect=9229 --watch --env-file .env.local src/index.ts",
    "ci": "npm run build",
    "start": "node --env-file .env.local dist/index.js",
    "build": "tsc",
    "build:docker": "docker build -f ./Dockerfile ../..",
    "type-check": "tsc --noEmit",
    "lint": "npm run lint:eslint",
    "lint:eslint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "description": "API for the Clearance Lab website.",
  "dependencies": {
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "express-winston": "^4.2.0",
    "helmet": "^8.1.0",
    "logform": "^2.7.0",
    "mongoose": "^8.13.2",
    "mongoose-lean-virtuals": "^1.1.0",
    "winston": "^3.17.0",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@tsconfig/node22": "^22.0.1",
    "@types/express": "^5.0.1",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.14.1",
    "eslint": "^9.24.0",
    "eslint-plugin-perfectionist": "^4.11.0",
    "prettier": "^3.5.3",
    "tsx": "^4.19.3",
    "turbo": "^2.5.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.30.1"
  }
}
