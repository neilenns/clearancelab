{
  "name": "api",
  "version": "1.0.0",
  "description": "API for the Clearance Lab website.",
  "type": "module",
  "scripts": {
    "build": "tsup",
    "build:docker": "BUILDKIT_PROGRESS=plain docker compose build api 2>&1 | tee build.log",
    "ci": "pnpm run build",
    "clean": "rimraf dist node_modules",
    "dev": "dotenvx run -f .env.local -- tsup --watch --onSuccess \"node dist/index.js\"",
    "dev:docker": "BUILDKIT_PROGRESS=plain docker compose run api",
    "lint": "pnpm run lint:eslint",
    "lint:eslint": "eslint .",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.41.0",
    "@workspace/plantools": "workspace:*",
    "@workspace/validators": "workspace:*",
    "auth0": "^4.22.0",
    "change-case": "^5.4.4",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-jwt-authz": "^2.4.1",
    "express-oauth2-jwt-bearer": "^1.6.1",
    "express-winston": "^4.2.0",
    "logform": "^2.7.0",
    "mongoose": "^8.13.2",
    "mongoose-lean-virtuals": "^1.1.0",
    "winston": "^3.17.0",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@tsconfig/node22": "^22.0.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.14.1",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-perfectionist": "^4.11.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-unicorn": "^59.0.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "tsup": "^8.4.0",
    "turbo": "^2.5.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.30.1"
  }
}
