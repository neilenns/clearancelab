{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "env": [
        "APP_BASE_URL",
        "AUTH0_AUDIENCE",
        "AUTH0_CLIENT_ID",
        "AUTH0_CLIENT_SECRET",
        "AUTH0_DOMAIN",
        "AUTH0_SCOPE",
        "AUTH0_SECRET",
        "BACKEND_CF_ACCESS_CLIENT_ID",
        "BACKEND_CF_ACCESS_CLIENT_SECRET",
        "MONGO_DB_CONNECTION_STRING",
        "MONGO_DB_NAME"
      ],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "cf-deploy": {
      "env": [
        "APP_BASE_URL",
        "AUTH0_AUDIENCE",
        "AUTH0_CLIENT_ID",
        "AUTH0_CLIENT_SECRET",
        "AUTH0_DOMAIN",
        "AUTH0_SCOPE",
        "AUTH0_SECRET",
        "BACKEND_CF_ACCESS_CLIENT_ID",
        "BACKEND_CF_ACCESS_CLIENT_SECRET",
        "CLOUDFLARE_ACCOUNT_ID",
        "CLOUDFLARE_API_TOKEN"
      ]
    },
    "ci": {
      "env": [
        "APP_BASE_URL",
        "AUTH0_AUDIENCE",
        "AUTH0_CLIENT_ID",
        "AUTH0_CLIENT_SECRET",
        "AUTH0_DOMAIN",
        "AUTH0_SCOPE",
        "AUTH0_SECRET",
        "MONGO_DB_CONNECTION_STRING",
        "MONGO_DB_NAME"
      ],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "dev": {
      "env": [
        "APP_BASE_URL",
        "AUTH0_AUDIENCE",
        "AUTH0_CLIENT_ID",
        "AUTH0_CLIENT_SECRET",
        "AUTH0_DOMAIN",
        "AUTH0_SCOPE",
        "AUTH0_SECRET",
        "DISABLE_AUTH",
        "BACKEND_CF_ACCESS_CLIENT_ID",
        "BACKEND_CF_ACCESS_CLIENT_SECRET",
        "NEXT_PUBLIC_DISABLE_AUTH"
      ]
    }
  }
}
