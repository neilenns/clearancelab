{
  "name": "web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "cf-build": "opennextjs-cloudflare build",
    "cf-deploy": "pnpm run cf-build && opennextjs-cloudflare deploy -- --env=$DEPLOY_ENV",
    "cf-populate": "opennextjs-cloudflare populateCache remote -- --env=$DEPLOY_ENV",
    "cf-preview": "pnpm run cf-build && opennextjs-cloudflare preview",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv ./src/types/worker-configuration.d.ts",
    "ci": "next build --experimental-build-mode compile",
    "clean": "rimraf .next",
    "db:generate": "cross-env LOCAL_DB_PATH=$(find .wrangler/state/v3/d1/miniflare-D1DatabaseObject -type f -name '*.sqlite' -print -quit) drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply CLEARANCELAB_DB --local --env=$DEPLOY_ENV",
    "db:seed": "rimraf .wrangler/state/v3/d1/miniflare-D1DatabaseObject && cross-env CI=true pnpm run db:migrate && wrangler d1 execute CLEARANCELAB_DB --file=./src/db/seed.sql --env=$DEPLOY_ENV --local --yes",
    "db:studio": "cross-env LOCAL_DB_PATH=$(find .wrangler/state/v3/d1/miniflare-D1DatabaseObject -type f -name '*.sqlite' -print -quit) drizzle-kit studio --host=0.0.0.0 --port=8788",
    "dev": "next dev",
    "lint": "next lint --format=stylish",
    "start": "next start"
  },
  "overrides": {
    "react-is": "^19.1.0"
  },
  "dependencies": {
    "@auth0/nextjs-auth0": "^4.5.1",
    "@hello-pangea/dnd": "^18.0.1",
    "@hookform/resolvers": "^5.0.1",
    "@opennextjs/cloudflare": "^1.0.0-beta.3",
    "@radix-ui/react-alert-dialog": "^1.1.11",
    "@radix-ui/react-checkbox": "^1.2.3",
    "@radix-ui/react-collapsible": "^1.1.4",
    "@radix-ui/react-dialog": "^1.1.11",
    "@radix-ui/react-dropdown-menu": "^2.1.7",
    "@radix-ui/react-label": "^2.1.4",
    "@radix-ui/react-popover": "^1.1.11",
    "@radix-ui/react-select": "^2.2.2",
    "@radix-ui/react-separator": "^1.1.3",
    "@radix-ui/react-slot": "^1.2.0",
    "@radix-ui/react-switch": "^1.2.2",
    "@radix-ui/react-tooltip": "^1.2.0",
    "@tanstack/react-table": "^8.21.3",
    "@workspace/plantools": "workspace:*",
    "@workspace/validators": "workspace:*",
    "better-sqlite3": "^11.10.0",
    "change-case": "^5.4.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "drizzle-orm": "^0.43.1",
    "framer-motion": "^12.9.4",
    "jwt-decode": "^4.0.0",
    "lucide-react": "^0.511.0",
    "nanoid": "^5.1.5",
    "next": "15.3.2",
    "next-themes": "^0.4.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.56.1",
    "react-number-format": "^5.4.4",
    "react-use": "^17.6.0",
    "recharts": "^2.15.3",
    "sonner": "^2.0.3",
    "tailwind-merge": "^3.2.0",
    "tanstack-table-search-params": "^0.8.0",
    "tw-animate-css": "^1.2.5",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@eslint/js": "^9.25.1",
    "@next/eslint-plugin-next": "^15.3.1",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^22.0.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "drizzle-kit": "^0.31.1",
    "eslint": "^9.24.0",
    "eslint-config-next": "15.3.2",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-turbo": "^2.5.2",
    "eslint-plugin-unicorn": "^59.0.0",
    "globals": "^16.0.0",
    "markdownlint": "^0.38.0",
    "markdownlint-cli": "^0.44.0",
    "rimraf": "^6.0.1",
    "shadcn": "^2.5.0",
    "tailwind-scrollbar": "^4.0.2",
    "tailwindcss": "^4",
    "turbo": "^2.5.0",
    "typescript": "^5",
    "typescript-eslint": "^8.30.1",
    "wrangler": "^4.17.0"
  }
}
