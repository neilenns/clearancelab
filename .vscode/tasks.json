{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "dev:api",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/apps/api"
      },
      "problemMatcher": {
        "base": "$tsc-watch",
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Starting backend",
          "endsPattern": "Starting backend"
        }
      },
      "presentation": {
        "panel": "dedicated"
      },
      "isBackground": true
    }
  ]
}
