{
  "tasks": [
    {
      "args": ["lint", "--log-prefix=none", "--ui=stream"],
      "command": "${workspaceFolder}/node_modules/.bin/turbo",
      "detail": "Lints all projects in the monorepo",
      "group": {
        "isDefault": true,
        "kind": "test"
      },
      "icon": {
        "color": "terminal.ansiBlue",
        "id": "check-all"
      },
      "label": "Lint everything",
      "problemMatcher": ["$eslint-stylish"],
      "type": "shell"
    },
    {
      "command": "pnpm run db:seed",
      "detail": "Deletes the database and recreates it with seed data.",
      "icon": {
        "color": "terminal.ansiGreen",
        "id": "database"
      },
      "label": "Seed DB",
      "options": {
        "cwd": "${workspaceFolder}/apps/web"
      },
      "problemMatcher": [],
      "type": "shell"
    }
  ],
  "version": "2.0.0"
}
