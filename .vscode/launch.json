{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Turbo everything",
      "type": "node-terminal",
      "request": "launch",
      "command": "pnpx turbo dev",
      "serverReadyAction": {
        "pattern": "- Local:.+(https?://.+)",
        "uriFormat": "%s",
        "action": "debugWithEdge",
        "killOnServerStop": true,
        "webRoot": "${workspaceFolder}/apps/web/src"
      }
    },
    {
      "name": "Turbo web",
      "type": "node-terminal",
      "request": "launch",
      "command": "pnpx turbo run web#dev",
      "serverReadyAction": {
        "pattern": "- Local:.+(https?://.+)",
        "uriFormat": "%s",
        "action": "debugWithEdge",
        "killOnServerStop": true,
        "webRoot": "${workspaceFolder}/apps/web/src"
      }
    },
    {
      "name": "Turbo api",
      "type": "node-terminal",
      "request": "launch",
      "command": "pnpx turbo run api#dev"
    }
  ]
}
