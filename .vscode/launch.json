{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Clearance Lab (All)",
      "type": "node-terminal",
      "command": "pnpx turbo watch dev",
      "request": "launch",
      "serverReadyAction": {
        "pattern": "- Local:.+(https?://.+)",
        "uriFormat": "%s/admin/scenarios/new",
        "action": "debugWithEdge",
        "killOnServerStop": true,
        "webRoot": "${workspaceFolder}/apps/web/src"
      }
    },
    {
      "name": "Clearance Lab (Web)",
      "type": "node-terminal",
      "command": "pnpx turbo watch dev --filter web",
      "internalConsoleOptions": "neverOpen",
      "request": "launch",
      "serverReadyAction": {
        "pattern": "- Local:.+(https?://.+)",
        "uriFormat": "%s",
        "action": "debugWithEdge",
        "killOnServerStop": true,
        "webRoot": "${workspaceFolder}/apps/web/src"
      }
    },
    {
      "name": "Clearance Lab (API)",
      "type": "node-terminal",
      "command": "pnpx turbo watch dev --filter api",
      "request": "launch"
    }
  ]
}
